<h1 class="text-center">Cocktails</h1>

<div class="text-center padded">
  <%= link_to "Create a cocktail", new_cocktail_path, class: "btn btn-primary" %>
</div>
<hr>

<div class="container">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
    <div class="col-xs-12 col-sm-4">
                <% if cocktail.picture.file.nil? %>
          <div class="card text-center"  style="background: gray">
                <% else %>
          <div class="card text-center"  style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path cocktail.picture %>')">
                 <% end %>
            <div class="card-description">
              <h2><%= link_to cocktail.name, cocktail_path(cocktail) %> </h2>
            </div>
          </div>
          <p><%= link_to "Delete cocktail", cocktail_path(cocktail),
            method: :delete,
            data: { confirm: "Are you sure?" },
           class: "btn btn-danger"%></p>
    </div>
    <% end %>
  </div>
</div>
