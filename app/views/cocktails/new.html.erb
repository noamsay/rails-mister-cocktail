<div class="container">
  <div class="row">
     <div class="col-xs-12 col-sm-6 col-sm-offset-3">
        <h1>New Cocktail</h1>
        <hr>
        <%= simple_form_for(@cocktail) do |f| %>
          <%= f.label :name %>
          <%= f.text_field :name %>
          <%= f.input :picture %>
          <%= f.input :picture_cache, as: :hidden %>
          <%= f.submit %>
        <% end %>
        <hr>
        <%= link_to 'Home', cocktails_path, class: "btn btn-primary" %>
    </div>
  </div>
</div>
<hr>

